mixin picture(srcArray)
  picture(
    class = attributes.className
  )
    if (srcArray[2])
      source(
        media = '(min-width: 569px) and (max-width: 1024px)',
        srcset = srcArray[2]
        )
    if (srcArray[1])
      source(
        media = '(max-width: 568px)',
        srcset = srcArray[1]
        )
    img(
      src = srcArray[0],
      alt = (attributes.alt) ? attributes.alt : ''
    )

mixin splitStr(str, className)
  -
    var strArr = str.split('');
    var html = '';
    for (var i = 0; i < strArr.length; i++) {
      html += `<span class="c-split-str js-split-str ${className}">${(strArr[i] == ' ') ? '&nbsp;' : strArr[i] }</span>`;
    }
  |!{html}
